{
  "name": "url-shortener-api",
  "version": "0.0.1",
  "description": "API developed with TDD and Clean Architecture",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings 0",
    "test": "jest --colors --passWithNoTests --runInBand ",
    "test:watch": "npm t -- --watch",
    "test:unit": "npm t -- --watch -c jest-unit-config.js",
    "test:integration": "npm t -- --watch -c jest-integration-config.js",
    "test:staged": "npm t -- --findRelatedTests",
    "test:ci": "npm t -- --coverage",
    "test:ci:silent": "npm t -- --coverage --silent"
  },
  "keywords": [
    "clean architecture",
    "tdd",
    "node",
    "typescript",
    "jest",
    "typeorm"
  ],
  "author": {
    "name": "Antonio marcos",
    "email": "antoniomarcos.amrrds@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.6",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
